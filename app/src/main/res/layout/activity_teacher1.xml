<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compose a Quiz"
        android:onClick="ComposeBtn"
        android:id="@+id/Compose_Quiz" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload a Quiz"
        android:onClick="UpBtn"
        android:id="@+id/Up_Quiz" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check a Quiz"
        android:onClick="CheckBtn"
        android:id="@+id/Check_Quiz" />

</LinearLayout>